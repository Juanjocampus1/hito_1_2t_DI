---
interface GaleryProps {
    title: string;
    images: string[];
}

const { title, images } = Astro.props;
---
    <h1>Galería de Imágenes</h1>
    <div class="galeria-grid">
        <div class="gallery-item">
            <img src="red_foce.jpg" alt="Montaña Rusa">
            <div class="overlay">Montaña Rusa</div>
        </div>
        <div class="gallery-item">
            <img src="rueda-gigante-foz-iguazu-yup-star-4.webp" alt="Rueda Gigante">
            <div class="overlay">Rueda Gigante</div>
        </div>
        <div class="gallery-item">
            <img src="images (13).jpg" alt="Casa Encantada">
            <div class="overlay">Casa Encantada</div>
        </div>
        <div class="gallery-item">
            <img src="36424110202_71dd1b07ef_b.jpg" alt="Tiovivo">
            <div class="overlay">Tiovivo</div>
        </div>
        <div class="gallery-item">
            <img src="mini-montaña-rusa-tren-infantil.jpg" alt="Mini Montaña Rusa">
            <div class="overlay">Mini Montaña Rusa</div>
        </div>
        <div class="gallery-item">
            <img src="portada-parques-acuaticos.jpg" alt="Zona Acuática">
            <div class="overlay">Zona Acuática</div>
        </div>
    </div>
</section>


<style>
    /* Estilos generales */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    scroll-behavior: smooth;
}

body {
    font-family: 'Arial', sans-serif;
    line-height: 1.6;
    color: #333;
    background-color: #f4f4f9;
}

/* Header */
header {
    position: fixed;
    width: 100%;
    background: linear-gradient(90deg, #ff7e5f, #feb47b);
    padding: 1rem 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 1000;
}

header nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

header .logo {
    font-size: 1.8rem;
    font-weight: bold;
    color: #fff;
    text-decoration: none;
}

header .menu {
    list-style: none;
    display: flex;
}

header .menu li {
    margin-left: 1.5rem;
}

header .menu a {
    color: #fff;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
}

header .menu a:hover {
    color: #ffeb3b;
}

/* Estilos de la hamburguesa */
.hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
}

.hamburger span {
    width: 25px;
    height: 3px;
    background: #fff;
    margin: 4px 0;
    transition: 0.4s;
}

/* Ocultar el menú en pantallas pequeñas y mostrar la hamburguesa */
@media (max-width: 768px) {
    header .menu {
        display: none;
        flex-direction: column;
        position: absolute;
        top: 60px;
        right: 0;
        background: #333;
        width: 100%;
        text-align: center;
        padding: 1rem 0;
    }

    header .menu.active {
        display: flex;
    }

    header .menu li {
        margin: 1rem 0;
    }

    .hamburger {
        display: flex;
    }
}

/* Animación de la hamburguesa */
.hamburger.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
}

.hamburger.active span:nth-child(2) {
    opacity: 0;
}

.hamburger.active span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
}


.gallery-section {
    padding-top: 100px;
    text-align: center;
}

.gallery-section h1 {
    font-size: 2.8rem;
    color: #333;
    margin-bottom: 2rem;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
}

.gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    padding: 0 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.gallery-item {
    position: relative;
    overflow: hidden;
    border-radius: 20px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.gallery-item:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
}

.gallery-item img {
    width: 100%;
    height: 100%;
    display: block;
    transition: transform 0.3s ease;
}

.gallery-item:hover img {
    transform: scale(1.1);
}

.overlay {
    position: absolute;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
    width: 100%;
    text-align: center;
    padding: 1rem;
    font-size: 1.2rem;
    opacity: 0;
    transform: translateY(100%);
    transition: opacity 0.3s ease, transform 0.3s ease;
}

.gallery-item:hover .overlay {
    opacity: 1;
    transform: translateY(0);
}

.galeria h1 {
    text-align: center;
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 2rem;
}
</style>